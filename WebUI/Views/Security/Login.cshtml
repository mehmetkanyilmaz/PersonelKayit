@model Entities.Concrete.Admin

<form asp-action="Login" asp-antiforgery="true">
    <div class="form-group">
        <label asp-for="kullanici_kodu"></label>
        <input asp-for="kullanici_kodu" class="form-control">
        <span asp-validation-for="kullanici_kodu" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sifre"></label>
        <input asp-for="sifre" type="password" class="form-control">
        <span asp-validation-for="sifre" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <span class="alert alert-danger @(ViewBag.mesaj == null ? "d-none":"")">@ViewBag.mesaj</span>
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>